@code {
    private LineChart _lineChart = default!;
    private List<string> _labels = new();
    private LineChartDataset _dataset = new();
    private LineChartOptions _lineChartOptions;

    protected override void OnInitialized()
    {
        _lineChartOptions = GetLineChartOptions();
        _dataset.Label = "Pi Approximation";
        _dataset.BorderColor = "rgb(75, 192, 192)";
        /*
        _dataset.PointBackgroundColor = "rgb(75, 192, 192)";
        */
        _dataset.Fill = false;
        _dataset.Tension = 0.1;
    }

    public void AddDataPoint(double piApproximation, int replication)
    {
        _labels.Add(replication.ToString());
        _dataset.Data.Add(piApproximation);

        if (_lineChart != null)
        {
            var datasets = new List<IChartDataset>() { _dataset };
            /*
            _lineChart.Update(_labels, datasets);
            */
            StateHasChanged();
        }
    }

    private LineChartOptions GetLineChartOptions()
    {
        var options = new LineChartOptions();
        options.Interaction.Mode = InteractionMode.Index;
        options.Plugins.Title = new ChartPluginsTitle { Text = "Pi Approximation", Display = true, Font = new ChartFont { Size = 20 } };
        options.Responsive = true;
        options.Scales.X!.Title = new ChartAxesTitle { Text = "Replication", Display = true };
        options.Scales.Y!.Title = new ChartAxesTitle { Text = "Pi", Display = true };
        options.Scales.Y.SuggestedMax = 6.0;
        return options;
    }
}
