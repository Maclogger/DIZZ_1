@page "/hihi"
@using DIZZ_1.BackEnd.Generators.Uniform
@using DIZZ_1.Components.Chart
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

<button @onclick="AdValue">Add Random Value</button>

@code {

    private RealTimeChart _chart = new();
    private UniformGenerator<double> _generator = UniformGeneratorFactory.CreateRealUniformGenerator(0.0, 10.0);

    private async Task AdValue()
    {
        await _chart.AddValue(_generator.Generate());
    }

}
