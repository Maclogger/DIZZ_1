@using DIZZ_1.BackEnd.Generators.Empiric
@using DIZZ_1.BackEnd.Generators.Discrete
@using DIZZ_1.BackEnd.Generators.Testers
<div class="row mb-3">
    <div class="col-3 p-0">
        <label>Min:</label>
        <input @bind="((UniformDiscreteGenerator)DistrModel!.Generator).Min" type="number" step="0.1" class="form-control"/>
    </div>

    <div class="col-3 pe-0">
        <label>Max:</label>
        <input @bind="((UniformDiscreteGenerator)DistrModel!.Generator).Max" type="number" step="0.1" class="form-control"/>
    </div>

    <div class="col-3 pe-0">
        <label>Probability:</label>
        <input @bind="DistrModel.Probability" type="number" min="0" max="1.0" step="0.01" class="form-control"/>
    </div>

    <div class="col-3 p-0 ps-3">
        <label></label>
        <button class="btn btn-danger w-100" @onclick="RemoveRow">Remove</button>
    </div>
</div>

@code {
    [Parameter] public EmpiricDistrModel<int>? DistrModel { get; set; }

    [Parameter] public EventCallback OnRemove { get; set; }

    private void RemoveRow()
    {
        OnRemove.InvokeAsync();
    }
}
